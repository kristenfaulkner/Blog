<form method="post" action="<%=post_url(@post)%>">
  <input type="hidden" name="_method" value="put">
  <label>
    Title
    <input type="text" name="post[title]" value= "<%=@post.title if @post%>">
  </label>
  <label>
    Body
    <input type="text" name="post[body]" value= "<%=@post.body if @post%>">
  </label>
  <input type= "submit" value="Update Post">
</form>

<%= link_to "Edit Post", edit_post_url(@post)%>
<%= link_to "New Post", new_post_url%>